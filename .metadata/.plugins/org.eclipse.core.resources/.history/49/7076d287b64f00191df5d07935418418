package stepDefinitions;

import CBE.StayBeta.HomePageImpl;
import CBE.StayBeta.HotelImpl;
import assertions.HotelSearchPageAssertions;
import cucumber.api.java.en.And;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import utilities.Login;

public class TestClass {
	Login login = new Login();
	HomePageImpl Home = new HomePageImpl();
	HotelImpl Hotel = new HotelImpl();
	HotelSearchPageAssertions HS = new HotelSearchPageAssertions();
	
	 @And("^Verify Testing Purpose$")
	    public void verify_testing_purpose() throws Throwable {
		     Home.ClickOnMenuItem("Hotel");
		     Hotel.ExpandExtraSearch();
		     HS.DataSourceDisplayAssertion("STAy");
		     Hotel.SelectHotelDataSource("Select all");
		     HS.DataSourceSelectedByDefault("Tourico");
		     
	    }
	 
	 @Given("^user enters (.+)$")
	    public void user_enters(String a) throws Throwable {
	        System.out.println(a + "   1");
	    }

	    @Then("^prints the letter (.+) again$")
	    public void prints_the_letter_again(String a) throws Throwable {
	    	System.out.println(a + "   3");
	    }

	    @And("^print the alphabet (.+)$")
	    public void print_the_alphabet(String a) throws Throwable {
	    	System.out.println(a + "   2");
	    }
}
