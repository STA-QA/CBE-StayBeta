package assertions;

import org.openqa.selenium.By;
import org.testng.Assert;

import utilities.TestBase;

public class HomePageAssertions extends TestBase {

	String LogoutId = "m_cphHeader_T_CustToolbar_cbeNav_liLogOut";
	String HomeTabLT = "Home";
	String DestinationsTabLT = "Destinations";
	String AboutUsTabLT = "AboutUs";
	String OffersTabLT = "Offers";
	String LoggedUserDetailsId = "m_cphHeader_T_CustToolbar_cbeNav_liLoggedInAs";
	
	public void HompePageAssertions() {
		 try {
			 Assert.assertTrue(CBEDriver.findElement(By.id(LogoutId)).isDisplayed(), "Verifying Logout link Presence");
			 Assert.assertTrue(CBEDriver.findElement(By.id(LoggedUserDetailsId)).isDisplayed(), "Verifying     Presence");
			 Assert.assertTrue(CBEDriver.findElement(By.linkText(HomeTabLT)).isDisplayed(), "Verifying     Presence");
			 Assert.assertTrue(CBEDriver.findElement(By.linkText(DestinationsTabLT)).isDisplayed(), "Verifying     Presence");
			 Assert.assertTrue(CBEDriver.findElement(By.linkText(AboutUsTabLT)).isDisplayed(), "Verifying     Presence");
			 Assert.assertTrue(CBEDriver.findElement(By.linkText(OffersTabLT)).isDisplayed(), "Verifying     Presence");
		 }
		 catch(AssertionError e) {
			 
		 }
		 catch(Throwable t) {
			 
		 }
}
}
